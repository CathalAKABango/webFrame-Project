{% extends '_base.html.twig' %}

{% block title %}Member login{% endblock %}

{% block aboutNavStyle %}current_page{% endblock %}

{% block main %}

    {% if message is defined %}
        <p class="error">
            {{ message }}
        </p>

        <hr>
    {% endif %}

    <h1>Please login</h1>
    <form
            method="post"
            action="/login"
    >

        <p>
            Username:
            <input type="text" name="username" autofocus>
        </p>
        <p>
            Password:
            <input type="password" name="password">
        </p>
        <p>
            Class Code:
            <input type="number" name="classcode">
        </p>

        <input type="submit" value="login">
    </form>

    <h2>Your attendance over the past while</h2>
    <table>
        <tr>
            <th> Class Codes </th>
            <th> Description </th>
        </tr>

        {% for technique in technique %}
            <tr>
                <td> {{ technique.id }}</td>
                <td>{{ technique.date }}</td>
            </tr>
        {% endfor %}

    </table>


{% endblock %}