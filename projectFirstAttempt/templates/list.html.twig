{% extends '_base.html.twig' %}

{# ------------------------------------------------- #}
{% block pageTitle %}Database{% endblock %}

{# ------------------------------------------------- #}
{% block listLinkStyle %}current_page{% endblock %}

{# ------------------------------------------------- #}
{% block main %}

<!-- start table for displaying DVD details -->
<h2>Contents of database</h2>

<table>
    <tr>
        <th> ID </th>
        <th> Name </th>
        <th> Last Grade </th>
        <th> Current Grade </th>
        <th> Password </th>
        <th> Date Joined </th>

    </tr>

    <!-- ********************* HTML for dvd items ****************** -->
<!--
    //   	0 - 15 - 40 - 55 - 70 - 85 - 100 %age
    // 	      .5   1    2    3    4    5     stars
-->

{% for dvd in dvds %}
    <tr>
        <td>{{ dvd.id }}</td>
        <td>{{ dvd.title }}</td>
        <td>{{ dvd.category }}</td>
        <td>{{ dvd.price }}</td>
        <td>{{ dvd.voteAverage }}</td>
        <td>{{ dvd.numVotes }}</td>



    </tr>
{% endfor %}

</table>

{% endblock %}
